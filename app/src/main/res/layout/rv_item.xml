<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:layout_height="wrap_content"
    tools:ignore="PrivateResource">


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:padding="1dp"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingStart="14dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tv_nama_tim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Nama Tim"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_stadion"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nama_tim"
            android:text="Stadion"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:id="@+id/petik1"
            android:layout_below="@id/tv_nama_tim"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/tv_stadion"
            android:text="@string/petik" />

        <TextView
            android:id="@+id/tv_stadion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_tim"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/petik1"
            android:text="stadion" />


        <TextView
            android:id="@+id/tv_liga"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/tv_stadion"
            android:text="Liga" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:id="@+id/petik2"
            android:layout_below="@id/petik1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@id/tv_stadion"
            android:text="@string/petik" />
        <TextView
            android:id="@+id/tv_liga1"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/tv_stadion1"
            android:layout_toEndOf="@id/petik2"
            android:text="Liga" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/tv_liga"
            android:text="@string/more_info" />

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="0dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/tv_liga"
            android:text="@string/more_info" />




    </RelativeLayout>

</LinearLayout>